<%= erb :'shared/banner' %>

<div class="container">
  <div class="row cards">
    <% @posts.each_with_index do |post, index| %>
      <div class="col-xs-12 col-sm-6 col-md-4">
        <%= erb :'shared/card', locals: { post: post, index: index} %>
      </div>
    <% end %>
  </div>

</div>
<div class="wrapper wrapper-yellow">
  <div class="new-post">
    <%= erb :new_post %>
  </div>
</div>
